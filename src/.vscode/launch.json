    "version": "0.2.0",
    "configurations": [
        {
            "name": "(Windows) Run",
            "type": "cppdbg",
            "request": "launch",
            "program": "${command:cmake.launchTargetPath}",
            "cwd": "${workspaceFolder}",

            "stopAtEntry": true,
            "externalConsole": true,

            "linux": {
              "MIMode": "gdb",
              "miDebuggerPath": "/usr/bin/gdb"
            },
            "osx": {
              "MIMode": "lldb"
            },
            "windows": {
              "MIMode": "gdb",
              "miDebuggerPath": "C:\\msys64\\ucrt64\\bin\\gdb.exe"
            }
        }
    ]
}